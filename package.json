{
  "name": "vscodecs",
  "displayName": "vscodecs",
  "description": "vscode plugin hint template",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.58.0"
  },
  "publisher": "vscodecs",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/web-songsong/vscode-cs"
  },
  "activationEvents": [
    "onCommand:vscodecs.updateTemplate",
    "onCommand:vscodecs.hintTemplate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "vscodecs",
      "properties": {
        "vscodecs.extname": {
          "type": "string",
          "default": ".vue,.js,.ts,.jsx,.tsx",
          "description": "写入变量的文件格式（用逗号隔开）"
        },
        "vscodecs.tempalteKey": {
          "type": "string",
          "default": "readme.md",
          "description": "定义模板标识文件"
        },
        "vscodecs.remoteLocations": {
          "type": "array",
          "description": "仓库远程地址(修改后请手动更新模板`update template`)",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "vscodecs.metaJson": {
          "type": "object",
          "description": "模板所需配置信息(插件会默认写入创建的文件名 `fileName`）",
          "default": {}
        }
      }
    },
    "commands": [
      {
        "command": "vscodecs.updateTemplate",
        "title": "update tempalte"
      },
      {
        "command": "vscodecs.hintTemplate",
        "title": "hint template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "vscodecs/vscodecs",
          "group": "3_vscodecs"
        }
      ],
      "vscodecs/vscodecs": [
        {
          "command": "vscodecs.hintTemplate",
          "group": "vscodecs"
        },
        {
          "command": "vscodecs.updateTemplate",
          "group": "vscodecs"
        }
      ]
    },
    "submenus": [
      {
        "id": "vscodecs/vscodecs",
        "label": "vscodecs"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/metalsmith": "^2.3.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "handlebars": "^4.7.7",
    "metalsmith": "^2.3.0"
  }
}
